<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/friendsFragment">

    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.rado.friends.ui.friends.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends">
        <action
            android:id="@+id/action_friendsFragment_to_addEditFriendFragment"
            app:destination="@id/addEditFriendFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditFriendFragment"
        android:name="com.rado.friends.ui.addEditFriend.AddEditFriendFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_edit_friend" >
        <argument
            android:name="friend"
            app:argType="com.rado.friends.data.Friend"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_addEditFriendFragment_to_cameraCustomActivity"
            app:destination="@id/cameraCustomActivity" />
    </fragment>
    <activity
        android:id="@+id/cameraCustomActivity"
        android:name="com.rado.friends.ui.addEditFriend.CameraCustomActivity"
        android:label="activity_camera_custom"
        tools:layout="@layout/activity_camera_custom" />
</navigation>